.message{data: {message: {id: message.id}}}
  .message__box
    .message__box__upper-info
      %p.message__box__upper-info__name
        = message.user.name
      %p.message__box__upper-info__date
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .message__box__text
      - if message.content.present?
        %p.message__box__text__content
        = message.content
    = image_tag message.image.url, class: 'message__box__image' if message.image.present?